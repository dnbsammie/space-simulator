<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:id="settingsScroll"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dnbsammie.spacesimulator.ui.settings.SettingsController"
            fitToWidth="true">

    <VBox fx:id="contentBox" spacing="40" padding="20">

        <!-- VIDEO -->
        <VBox fx:id="videoSection" spacing="15">
            <VBox spacing="4">
                <Label text="ðŸ“º Display Configuration" styleClass="block-title"/>
                <Label text="Control how the simulator renders on your screen." styleClass="block-desc"/>
